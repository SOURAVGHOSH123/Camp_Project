<% layout('layouts/boilerplate') %>
   <h1>Register Page</h1>
   <form action="/register" method="post" class="validated-form" novalidate>
      <div class="mb-3">
         <label class="form-label" for="username">User Name</label>
         <input class="form-control" type="text" id="username" placeholder="Enter the username" name="username"
            required>
         <div class="valid-feedbacK">Look Good!</div>
      </div>
      <div class="mb-3">
         <label class="form-label" for="email">Email</label>
         <input class="form-control" type="email" id="email" placeholder="Enter the email" name="email" required>
         <div class="valid-feedbacK">Look Good!</div>
      </div>
      <div class="mb-3">
         <label class="form-label" for="password">Password</label>
         <input class="form-control" type="password" id="password" placeholder="Enter the password" name="password"
            required>
         <div class="valid-feedbacK">Look Good!</div>
      </div>

      <button class="btn btn-success">Register</button>
   </form>

   <p>You have account ? <a href="/login">login</a></p>